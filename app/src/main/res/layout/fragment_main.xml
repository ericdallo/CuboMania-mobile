<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityFragment">

        <Spinner
            android:id="@+id/cube_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/cube_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cube_size"
            >
        </Spinner>
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/cube_dificulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cube_type">
        </Spinner>
        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/cube_title"
            android:textSize="26sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escolha uma opção"
            android:textStyle="bold"
            android:layout_below="@+id/cube_dificulty"
            />
        <ImageView
            android:layout_marginTop="15dp"
            android:id="@+id/cube_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cube_title"
            android:src="@drawable/black_cube_init"
            android:contentDescription="cube_image" />
        <LinearLayout
            android:id="@+id/linear_price"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cube_image"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Preço:"
                />
            <TextView
                android:id="@+id/res_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_size"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_price"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Tamanho:" />
            <TextView
                android:id="@+id/res_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_type"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_size"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Tipo:"
                />
            <TextView
                android:id="@+id/res_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_dificulty"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_type"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Dificuldade:"
                />
            <TextView
                android:id="@+id/res_dificulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear_dificulty"
            android:orientation="horizontal"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/bt_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_ic_previous"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/fab_button_margin_bottom"
                android:layout_marginRight="@dimen/fab_button_margin_right"
                android:layout_marginEnd="@dimen/fab_button_margin_right"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp"
                app:borderWidth="0dp"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/bt_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_ic_download2"
                android:layout_centerHorizontal="true"
                app:layout_anchorGravity="bottom|center"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/fab_button_margin_bottom"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp"
                app:borderWidth="0dp"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/bt_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_ic_next"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/fab_button_margin_bottom"
                android:layout_marginRight="@dimen/fab_button_margin_right"
                android:layout_marginEnd="@dimen/fab_button_margin_right"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp"
                app:borderWidth="0dp"/>
        </RelativeLayout>
    </RelativeLayout>